<?xml version="1.0" encoding="utf-8"?>
<Application
  Name="LightSwitchApplication.CloudBusinessTasks.HTMLClient" xmlns="http://schemas.microsoft.com/LightSwitch/2010/xaml/model">
  <Application.Attributes>
    <Partial />
  </Application.Attributes>
  <Screen
    Name="ViewTask">
    <Screen.Attributes>
      <SaveChangesTo
